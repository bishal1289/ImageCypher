    <main>
      <!-- Encrypt Form -->
      <section class="encrypt-section">
        <h2>Encrypt Image</h2>
        <form id="encryptForm" enctype="multipart/form-data">
          <div class="card">
            <div id="encryptDrop" class="dropzone">
              <div class="dropzone-content">
                <img src="upload-icon.svg" alt="Upload" class="upload-icon">
                <p>Drag & drop your image here</p>
                <p class="or-text">- OR -</p>
                <label for="encryptInput" class="custom-file-input">Choose File</label>
                <input type="file" name="image" id="encryptInput" accept="image/*" class="hidden-input">
              </div>
              <div id="encrypt-preview" class="image-preview"></div>
            </div>
            <button type="submit" disabled id="encryptBtn" class="action-button">Encrypt</button>
          </div>
          <div id="encryptResult" class="result-container"></div>
        </form>
      </section>

      <!-- Decrypt Form -->
      <section class="decrypt-section">
        <h2>Decrypt Image</h2>
        <form id="decryptForm" enctype="multipart/form-data">
          <div class="card">
            <div class="dropzone-container">
              <div id="decryptDrop" class="dropzone half-width">
                <div class="dropzone-content">
                  <img src="upload-icon.svg" alt="Upload" class="upload-icon">
                  <p>Drop encrypted image</p>
                  <label for="decryptInput" class="custom-file-input">Choose File</label>
                  <input type="file" name="image" id="decryptInput" accept="image/*" class="hidden-input">
                </div>
                <div id="decrypt-preview" class="image-preview"></div>
              </div>

              <div id="keyDrop" class="dropzone half-width">
                <div class="dropzone-content">
                  <img src="key-icon.svg" alt="Key" class="upload-icon">
                  <p>Drop key file</p>
                  <label for="keyInput" class="custom-file-input">Choose File</label>
                  <input type="file" name="key" id="keyInput" class="hidden-input">
                </div>
                <div id="key-preview" class="image-preview"></div>
              </div>
            </div>
            <button type="submit" disabled id="decryptBtn" class="action-button">Decrypt</button>
          </div>
          <div id="decryptResult" class="result-container"></div>
        </form>
      </section>
    </main>

